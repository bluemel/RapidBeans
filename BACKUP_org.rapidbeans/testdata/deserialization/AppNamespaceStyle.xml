<?xml version="1.0" encoding="ISO-8859-1" standalone="yes"?>
<rbprescfg:ConfigApplication
	xmlns:rbprescfg="http://rapidbeans.org/presentation/config"
	name="Test"
	rootpackage="org.rapidbeans"
	applicationclass="org.rapidbeans.presentation.TestClient"
	guitype="swing"
	lookandfeel="windows"
	defaultlocale="en"
	defaultcharset="UTF-8"
	>
	<locale
		id="de"
		name="de"
		/>
	<locale
		id="en"
		name="en"
		/>
	<mainwindow
		name="mainwindow"
		width="800"
		height="500"
		>
        <menubar
            name="menubar"
            >
            <menu
                name="file"
                >
                <menuitem
                    name="load"
                    />
                <menuitem
                    name="save"
                    />
                <menuitem
                    name="quit"
                    >
                    <action
                        classname="org.rapidbeans.service.ActionQuit"
                        />
                </menuitem>
            </menu>
            <menu
                name="edit"
                >
                <menuitem
                    name="view"
                    />
                <submenu
                    name="insert"
                    >
                    <menuitem
                        name="object1"
                        />
                    <menuitem
                        name="object2"
                        />
                </submenu>
            </menu>
            <menu
                name="test"
                >
                <menuitem
                    name="test1"
                    />
                <submenu
                    name="test2"
                    >
                    <menuitem
                        name="test21"
                        />
                    <submenu
                        name="test22"
                        >
                        <menuitem
                            name="test221"
                            />
                        <menuitem
                            name="test222"
                            />
                    </submenu>
                    <menuitem
                        name="test23"
                        />
                </submenu>
            </menu>
        </menubar>
	</mainwindow>
	<currency
		restricttoone="true"
		uselocal="true"
		/>
</rbprescfg:ConfigApplication>
