<beantype name="org.rapidbeans.presentation.config.ConfigToolbar"
	extends="org.rapidbeans.presentation.config.ConfigMenuEntry">
	<property name="name"/>
	<property name="classname"
		type="string"
	/>
	<property name="buttons"
		type="association"
		composition="true"
        targettype="org.rapidbeans.presentation.config.ConfigToolbarButton"
		collectionclass="java.util.ArrayList"
	/>
	<codegen mode="joint" implementation="strict"/>
</beantype>
