<?xml version="1.0" encoding="iso-8859-1"?>

<project default="">
<!--
  ####################################################
  # jar
  ####################################################
-->
  <target name="jar"
    depends="classes,resources"
    description="pack the classes and resourecs into one jar"
    >
    <mkdir dir="dist"/>
    <jar
      jarfile="dist/${project.jarfile}"
      basedir="bin"
      >
      <manifest>
        <attribute name="Implementation-Title" value="${project.name}"/>
        <attribute name="Implementation-Version" value="${project.version.number}.${project.version.release}.${project.version.build} ${tstamp.datetime}"/> 
        <!--<attribute name="Main-Class" value="${project.mainclass}"/>-->
      </manifest>
    </jar>
  </target>

</project>
